        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-async-errors": "^3.1.1",
        "express-validator": "^7.2.0",
        "helmet": "^8.0.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "per-env": "^1.0.2",
        "pg": "^8.13.1",
        "prisma": "^6.0.1"
